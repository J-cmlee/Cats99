<br />
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Cat Index</h2>
    </div>
    <div class="col-3">
        <a class="btn btn-info form-control text-white">Create New Cat</a>
    </div>

     <div class="col-12 border p-3 mt-3">
        <form method="post">
            <table class="table table-striped border">
                <!--Headings-->
                <tr class="table-secondary">
                    <th>
                        <label>Name</label>
                    </th>
                    <th>
                        <label>Age</label>
                    </th>
                    <th>
                        <label>Sex</label>
                    </th>
                    <th>
                        <label>Color</label>
                    </th>
                    <th>
                        <label>Description</label>
                    </th>
                    <th>
                        <!--Blank heading for button columns-->
                    </th>
                </tr>

                <!--List of Cats-->
                <% @cats.each do |kitty| %>
                    <tr>
                        <td>
                            <%= kitty.name %>
                        </td>
                        <td>
                            <%= kitty.age %>
                        </td>
                        <td>
                            <%= kitty.sex %>
                        </td>
                        <td>
                            <%= kitty.color %>
                        </td>
                        <td>
                            <%= kitty.description %>
                        </td>
                        <td>
                            <button onclick="return confirm('Are you sure you want to delete?')" class="btn btn-danger btn-sm">Delete</button>
                            <a class="btn btn-success btn-sm text-white">Edit</a>
                        </td>
                    </tr>
                <% end %>

            </table>
        </form>
    </div>

</div>
